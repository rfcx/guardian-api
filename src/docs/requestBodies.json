{
  "Report": {
    "type": "object",
    "properties": {
      "encounteredAt": {
        "type": "date",
        "description": "An incident encountered at date (iso 8601)",
        "example": "2020-11-16T09:03:24.928Z"
      },
      "isEvidenceEncountered": {
        "type": "boolean",
        "description": "Whether evidences were encountered or not",
        "example": true
      },
      "evidences": {
        "type": "array",
        "description": "Evidence types",
        "example": ["Cleared areas", "Cut down trees"]
      },
      "loggingScale": {
        "type": "number",
        "description": "Logging scale (0 - not sure, 1 - small, 2 - large)",
        "enum": [0, 1, 2],
        "example": 1
      },
      "damageScale": {
        "type": "number",
        "description": "Damage scale (0 - no visible tree disruption found, 1 - small number of trees cut down, 2 - medium number of trees cut down, 3 - large area substantially clear cut)",
        "enum": [0, 1, 2, 4],
        "example": 1
      },
      "responseActions": {
        "type": "array",
        "description": "Actions that were taken",
        "example": ["Arrest", "Reprimand"]
      },
      "note": {
        "type": "string",
        "description": "Additional note",
        "example": "I found a machete"
      },
      "guardianId": {
        "type": "string",
        "description": "A guardian id from which the event was received",
        "example": "skhedl36rxb2"
      }
    }
  }
}
